{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "Distribution of Earth’s Freshwater by Reservoir",
    "subtitle": "Toggle between linear and logarithmic scale",
    "anchor": "middle"
  },

  "data": {
    "url": "water_cleaned.csv",
    "format": { "type": "csv" }
  },

  "params": [
    {
      "name": "scaleType",
      "value": "linear",
      "bind": {
        "input": "select",
        "options": ["linear", "log"],
        "labels": ["Linear Scale", "Log Scale"]
      }
    }
  ],

  "transform": [
    {
      "calculate": "datum['\\ufeffCategoryGroup'] != null ? datum['\\ufeffCategoryGroup'] : datum.CategoryGroup",
      "as": "CategoryGroupClean"
    },
    {
      "filter": "datum.CategoryGroupClean === 'Fresh Water'"
    },
    {
      "calculate": "toNumber(datum.Volume_km3)",
      "as": "VolumeNum"
    }
  ],
  "resolve": {
    "scale": {
      "x": "independent"
    }
  },
  "layer": [
    {
      "transform": [{ "filter": "scaleType === 'linear'" }],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Category",
          "type": "nominal",
          "sort": "-x",
          "title": "Freshwater reservoir"
        },
        "x": {
          "field": "VolumeNum",
          "type": "quantitative",
          "title": "Stored volume (km³)"
        },
        "tooltip": [
          { "field": "Category", "type": "nominal", "title": "Reservoir" },
          {
            "field": "VolumeNum",
            "type": "quantitative",
            "title": "Volume (km³)",
            "format": ","
          },
          {
            "field": "Percent_Global_Freshwater",
            "type": "quantitative",
            "title": "% of Global Freshwater"
          }
        ]
      }
    },

    {
      "transform": [{ "filter": "scaleType === 'log'" }],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Category",
          "type": "nominal",
          "sort": "-x",
          "title": "Freshwater reservoir"
        },
        "x": {
          "field": "VolumeNum",
          "type": "quantitative",
          "scale": { "type": "log" },
          "title": "Stored volume (km³, log scale)"
        },
        "tooltip": [
          { "field": "Category", "type": "nominal", "title": "Reservoir" },
          {
            "field": "VolumeNum",
            "type": "quantitative",
            "title": "Volume (km³)",
            "format": ","
          },
          {
            "field": "Percent_Global_Freshwater",
            "type": "quantitative",
            "title": "% of Global Freshwater"
          }
        ]
      }
    }
  ]
}
