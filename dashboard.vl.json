{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Distribution of Earth’s Freshwater by Reservoir",
    "subtitle": "Comparing volumes stored in major freshwater reservoirs",
    "anchor": "middle"
  },
  "data": {"url": "water_cleaned.csv", "format": {"type": "csv"}},
  "transform": [
    {
      "calculate": "datum['\\ufeffCategoryGroup'] != null ? datum['\\ufeffCategoryGroup'] : datum.CategoryGroup",
      "as": "CategoryGroupClean"
    },
    {
      "filter": "datum.CategoryGroupClean === 'Fresh Water'"
    },
    {
      "calculate": "toNumber(datum.Volume_km3)",
      "as": "VolumeNum"
    }
  ],
  "hconcat": [
    {
      "title": "Linear scale",
      "mark": "bar",
      "encoding": {
        "y": {"field": "Category", "type": "nominal", "sort": "-x", "title": "Freshwater reservoir"},
        "x": {"field": "VolumeNum", "type": "quantitative", "title": "Stored volume (km³)"},
        "tooltip": [
          {
            "field": "Category",
            "type": "nominal",
            "title": "Reservoir"
          },
          {
            "field": "VolumeNum",
            "type": "quantitative",
            "title": "Volume (km³)",
            "format": ","
          },
          {
            "field": "Percent_Global_Freshwater",
            "type": "quantitative",
            "title": "% of Global Freshwater"
          }
        ]
      }
    },
        {
      "title": "Logarithmic scale",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Category",
          "type": "nominal",
          "sort": "-x",
          "title": null
        },
        "x": {
          "field": "VolumeNum",
          "type": "quantitative",
          "scale": { "type": "log" },
          "title": "Stored volume (km³, log scale)"
        },
        "tooltip": [
          { "field": "Category", "type": "nominal", "title": "Reservoir" },
          {
            "field": "VolumeNum",
            "type": "quantitative",
            "title": "Volume (km³)",
            "format": ","
          },
          {
            "field": "Percent_Global_Freshwater",
            "type": "quantitative",
            "title": "% of Global Freshwater"
          }
        ]
      }
    }
  ]
}
