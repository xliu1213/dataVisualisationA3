{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "params": [
    {
      "name": "scaleType",
      "value": "linear",
      "bind": {
        "input": "select",
        "options": ["linear", "log"],
        "labels": ["Linear Scale", "Log Scale"]
      }
    }
  ],

  "vconcat": [
    {
      "title": {
        "text": "Distribution of Earth’s Freshwater by Reservoir",
        "subtitle": "Toggle between linear and logarithmic scale",
        "anchor": "middle"
      },

      "data": {
        "url": "water_cleaned.csv",
        "format": { "type": "csv" }
      },

      "transform": [
        {
          "calculate": "datum['\\ufeffCategoryGroup'] != null ? datum['\\ufeffCategoryGroup'] : datum.CategoryGroup",
          "as": "CategoryGroupClean"
        },
        { "filter": "datum.CategoryGroupClean === 'Fresh Water'" },
        {
          "calculate": "toNumber(replace(datum.Volume_km3, ',', ''))",
          "as": "VolumeNum"
        }
      ],

      "resolve": {
        "scale": {
          "x": "independent"
        }
      },

      "layer": [
        {
          "transform": [
            { "filter": "scaleType === 'linear'" }
          ],
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "Category",
              "type": "nominal",
              "sort": "-x",
              "title": "Freshwater reservoir"
            },
            "x": {
              "field": "VolumeNum",
              "type": "quantitative",
              "title": "Stored volume (km³)"
            }
          }
        },
        {
          "transform": [
            { "filter": "scaleType === 'log'" },
            { "filter": "datum.VolumeNum > 0" }
          ],
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "Category",
              "type": "nominal",
              "sort": "-x",
              "title": "Freshwater reservoir"
            },
            "x": {
              "field": "VolumeNum",
              "type": "quantitative",
              "scale": { "type": "log" },
              "title": "Stored volume (km³, log scale)"
            }
          }
        }
      ]
    },

    {
      "title": {
        "text": "Freshwater vs Biological Water Reservoirs",
        "subtitle": "Even the largest biological reservoirs store far less water than freshwater systems",
        "anchor": "middle"
      },

      "width": 500,
      "height": 320,

      "data": {
        "url": "water_cleaned.csv",
        "format": { "type": "csv" }
      },

      "transform": [
        {
          "calculate": "datum['\\ufeffCategoryGroup'] != null ? datum['\\ufeffCategoryGroup'] : datum.CategoryGroup",
          "as": "CategoryGroupClean"
        },
        {
          "calculate": "toNumber(datum.Volume_km3)",
          "as": "VolumeNum"
        }
      ],

      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "black",
        "strokeWidth": 0.5
      },

      "encoding": {
        "x": {
          "field": "CategoryGroupClean",
          "type": "nominal",
          "title": "Water system",
          "axis": { "labelAngle": 0 }
        },
        "y": {
          "field": "Category",
          "type": "nominal",
          "title": null
        },
        "size": {
          "field": "VolumeNum",
          "type": "quantitative",
          "scale": { "type": "sqrt", "range": [300, 9000] },
          "title": "Stored volume (km³)"
        },
        "color": {
          "field": "CategoryGroupClean",
          "type": "nominal",
          "scale": {
            "domain": ["Fresh Water", "Biological Water"],
            "range": ["#1f77b4", "#2ca02c"]
          },
          "legend": { "title": "Water system" }
        },
        "tooltip": [
          { "field": "Category", "type": "nominal", "title": "Reservoir" },
          { "field": "CategoryGroupClean", "type": "nominal", "title": "System" },
          {
            "field": "VolumeNum",
            "type": "quantitative",
            "title": "Stored volume (km³)",
            "format": ","
          }
        ]
      }
    }
  ]
}
